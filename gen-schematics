#!/usr/bin/env python3

from svg_schematic import Ground, Label, MOS, Resistor, Schematic, Source, Wire

with Schematic(filename="figures/pnoise.svg"):
    vmod = Source(value="ğ˜ˆâ€‰sin(2Ï€ğ˜§â‚€)", kind="sine")
    r1 = Resistor(C=vmod.C, xoff=125, name="Rva", orient="v")
    r2 = Resistor(C=r1.C, xoff=125, name="Rref", orient="v")
    Wire([vmod.p, r2.p])
    Wire([vmod.n, r2.n])

with Schematic(filename="figures/pnbsim.svg", right_pad=25):
    m = MOS(orient='h-|')
    vs = Source(n=m.s, xoff=-25, value="ğ˜ˆâ€‰sin(2Ï€ğ˜§â‚€)", kind="sine", orient='v-')
    Wire([m.s, vs.n])
    Ground(C=vs.p)
    vg = Source(p=m.g, xoff=-125, value="3V", kind="vdc")
    Wire([m.g, vg.p])
    Ground(C=vg.n)
    vd = Source(p=m.d, xoff=25, value="ğ˜ˆâ€‰sin(2Ï€ğ˜§â‚€)", kind="sine", orient='v')
    Wire([m.d, vd.p])
    Ground(C=vd.n)
